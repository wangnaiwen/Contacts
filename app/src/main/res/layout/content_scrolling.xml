<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wit.contacts.view.activity.UserDetailInfoActivity"
    tools:showIn="@layout/activity_user_detail">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <Button
                android:id="@+id/btn_dial"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_bg_selector"
                android:text="15677301446"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/icon_send_msg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/btn_home_nor"
                android:background="@drawable/btn_bg_selector"
                android:clickable="true"/>
            <TextView
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="#FFF5F4F4"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignLeft="@id/icon_send_msg"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#FFF5F4F4"/>

        <Button
            android:id="@+id/edit_contact"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="20dp"
            android:text="编辑联系人"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:background="@drawable/btn_bg_selector"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#FFF5F4F4"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/shape_contact"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="20dp"
            android:text="分享联系人"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:background="@drawable/btn_bg_selector"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#FFF5F4F4"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/add_contact_blacklist"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="20dp"
            android:text="加入黑名单"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:background="@drawable/btn_bg_selector"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#FFF5F4F4"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/delete_contact"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="20dp"
            android:text="删除联系人"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:background="@drawable/btn_bg_selector"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#FFF5F4F4"
            android:text="通话记录"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textColor="#8e8c8c"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
