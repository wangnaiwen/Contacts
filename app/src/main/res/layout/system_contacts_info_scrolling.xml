<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wit.contacts.view.activity.UserDetailInfoActivity"
    tools:showIn="@layout/activity_system_contacts_detail">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="55dp">
            <Button
                android:id="@+id/btn_dial_system_contacts"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:background="@drawable/btn_bg_selector"
                android:text="15677301446"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/icon_send_msg_system_contacts"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/sms_icon"
                android:background="@drawable/btn_bg_selector"
                android:clickable="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="55dp"
            android:id="@+id/phone_more_layout_system_contacts">
            <Button
                android:id="@+id/btn_phone_more_system_contacts"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:paddingLeft="20sp"
                android:background="@drawable/btn_bg_selector"
                android:text="15677301446"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/icon_send_msg_more_system_contacts"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/sms_icon"
                android:background="@drawable/btn_bg_selector"
                android:clickable="true"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#FFF5F4F4"/>
        <Button
            android:id="@+id/edit_email_system_contacts"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/btn_bg_selector"
            android:gravity="center_vertical"
            android:text="1464524269@qq.com"
            android:textAllCaps="false"
            android:paddingLeft="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#FFF5F4F4"/>

        <Button
            android:id="@+id/add_contacts_to_local"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="20dp"
            android:text="添加到本地"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:background="@drawable/btn_bg_selector"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#FFF5F4F4"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/shape_contact_system_contacts"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="20dp"
            android:text="分享联系人"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:background="@drawable/btn_bg_selector"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#FFF5F4F4"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/add_contact_blacklist_system_contacts"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="20dp"
            android:text="加入黑名单"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:background="@drawable/btn_bg_selector"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#FFF5F4F4"
            android:text="通话记录"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textColor="#8e8c8c"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
