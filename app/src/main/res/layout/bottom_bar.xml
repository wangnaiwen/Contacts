<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_bar"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_alignParentBottom="true"
    android:descendantFocusability="afterDescendants">
    <LinearLayout
        android:id="@+id/bottom_btn_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/imageview_home"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/btn_home_pred"
            />
        <TextView
            android:id="@+id/textview_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_name_home"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/color_btn_selected"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_btn_friend"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/imageview_friend"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/btn_colleague_nor" />
        <TextView
            android:id="@+id/textview_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_name_colleague"
            android:textSize="12sp"
            android:textColor="@color/color_btn_normal"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_btn_discover"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/imageview_discover"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/btn_discover_nor" />
        <TextView
            android:id="@+id/textview_discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_name_discover"
            android:textSize="12sp"
            android:textColor="@color/color_btn_normal"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_btn_me"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/imageview_me"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/btn_me_nor" />
        <TextView
            android:id="@+id/textview_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_name_me"
            android:textSize="12sp"
            android:textColor="@color/color_btn_normal"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>